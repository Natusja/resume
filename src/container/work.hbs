{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	{{#with main}}
	<main>
		<section>
			{{> title data="Work history " big=true}}
			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>

						<br>

						<div>
							{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(досі працюємо)
							{{/if}}
						</div>

						<br>

						<div><b>{{company.name}}</b></div>

						<br>
						<br>

						<div>
							<strong>Projects ({{projectAmount}})</strong>
						</div>

						<br>

						<ul>
							{{#each projects}}
							<li>
								<div>
									{{> link text=name href=url blank=true noLine=true}}
								</div>

								<br>

								<div>
									<p>
										{{about}}
									</p>
								</div>

								<br>

								<br>

								<div><em>Project stacks</em> ({{awardAmount}})</div>

								<br>

								<div>
									{{# each stacks}}
							<li>
								{{name}}
							</li>
							{{/each}}
			</div>

			<br>
			<div><em>Project awards</em></div>
			<br>
			<div>
				{{# each awards}}
				<li>
					{{name}}
				</li>
				{{/each}}
			</div>
			</li>
			{{/each}}
			</ul>
			</li>
			{{/each}}
			</ul>
</div>
</section>
</main>
{{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}