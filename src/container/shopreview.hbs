<main>
    <section>
        <nav class="nav row">
            <ul class="col-4">
                <li class="d-flex">
                    {{#each navigation.links}}
                    <a class="nav-link" {{href}}>{{text}}</a>
                    {{/each}}
                    <a class="disabled nav-link" href="#">Disabled</a>
                </li>
            </ul>
        </nav>
    </section>
    <hr>



    <div class="row">
        <div class="col-8">
            {{#with formBlock}}
            <h2 class="mb-3">{{header}}</h2>
            {{#with rating}}
            <div class="card-title">
                {{title}}
                {{value}}
            </div>
            {{/with}}
            {{/with}}

            {{#with formBlock.actionBlock}}
            <div class="nav nav-tabs col-8 mt-4">
                {{#each tabs}}
                <div class="nav-item col-4">
                    {{#if isActive}}
                    <a href="#" class="nav-link active">{{text}}</a>
                    {{else}}
                    {{#if isDisabled}}
                    <a href="#" class="nav-link disable">{{text}}</a>
                    {{else}}
                    <a href="#" class="nav-link">{{text}}</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/each}}
            </div>
            {{/with}}

            <div class="card col-8 mt-5">
                {{#with formBlock.actionBlock.report}}
                <div class="card-body">
                    <div class="card-title">{{title}}</div>
                    {{#with button}}
                    <button href="{{link}}" class="btn btn-secondary">{{text}}</button>
                </div>
                {{/with}}
                {{/with}}
            </div>
            <div class="d-flex justify-content-center py-3 ">
                {{#with formBlock.feedbackBlock}}
                <div class="ps-2 mb-3 mb-md-0 me-md-auto">
                    <h2>{{title}}</h2>

                    <ul class="nav">
                        {{#each buttons}}
                        {{#if isWarning}}<button href="{{link}}" class="btn btn-warning col-3 ms-2">{{text}}</button>
                        {{else}}
                        {{#if isSuccess}}<button href="{{link}}" class="btn btn-success col-3 ms-2">{{text}}</button>
                        {{else}}
                        {{#if isDanger}}<button href="{{link}}" class="btn btn-danger col-3 ms-2">{{text}}</button>
                        {{/if}}
                        {{/if}}
                        {{/if}}
                        {{/each}}
                        {{/with}}
                    </ul>
                </div>
            </div>
        </div>


        <div class="col-4">
            <div class="card mb-3">
                {{#with formBlock.goodsInfo}}
                <div class="card-header">
                    <img src="{{photo}}" alt="{{name}}">
                    <div class="card-title">{{name}}</div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">{{price}}
                    <div class="nav">
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <div class="mb-3"> <button class="btn btn-link bg-secondary text-white" href="{{link}}">
                                {{text}}</button></div>
                        {{/if}}
                        {{#if isSecondary}}
                        <div class="mb-3"> <button class="btn btn-link bg-secondary text-white"
                                href="{{link}}">{{text}}</button>
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}

            <div class="card">
                {{#with formBlock.goodsInfo.seller}}
                <h4 class="card-title">{{title}}</h4>
                <div class="card-body">{{value}}</div>
                {{/with}}
            </div>
        </div>

        <hr>




        <hr>

        {{#each reviewList}}
        <div class="card-body col-10 px-2">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">{{title.userName}}</strong>
                    <div>{{title.caption}}</div>
                    <div>{{title.date}}</div>
                </div>

                <div class="card-body">
                    {{#with reviewBody}}
                    <div class="card-title">{{seller.title}}</div>
                    <p>{{seller.value}}</p>
                    <p>{{rating.title}}: {{rating.value}}</p>
                    <div class="mb-3">{{text}}</div>

                    <strong>{{advantages.title}}: </strong>
                    <p>{{advantages.text}}</p>

                    <strong>{{disadvantages.title}}: </strong>
                    <p>{{disadvantages.text}}</p>
                    {{#each images}}
                    <img class="me-2" src="{{this}}" alt="photos">
                    {{/each}}
                    {{/with}}
                </div>


                {{#each reviewBody.coments}}
                <div class="card mt-3 ms-4">
                    <div class="card-body">
                        <strong class="card-title">{{userName}}</strong>
                        <div>{{date}}</div>
                        <div>{{text}}</div>
                    </div>
                </div>
                {{/each}}
                {{/each}}
            </div>
        </div>

        <div class="card bg-success text-white text-center mt-4">
            {{#with service}}
            <h2 class="card-title">{{title}}</h2>
            <div class="card-body text-white text-center">
                <p>{{description}}</p>
                {{#each buttons}}
                <button class="btn btn-link bg-primary text-white" href="{{link}}">{{text}}</button>
                {{/each}}
            </div>

            {{/with}}

        </div>

        <section class="col-12 ms-0">
            <div class="row">
                {{#each footer}}
                <div class="col-2">
                    <div class="border-light">
                        {{#each this}}
                        <a href="{{this.link}}" class="m-2
                    text-decoration-none
                        {{#if @last}}
                        nav-link disable
                        {{/if}}
                   ">{{this.text}}</a>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
</main>